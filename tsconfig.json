{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Quake",
    "files": [
        "src/index.ts"
    ],
    "include": [
        "types/*.d.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "target": "es2020",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": false,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "declaration": true,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "lib": [
            "es2020"
        ],
        "paths": {
            "*": [
                "node_modules/*",
                "types/*"
            ]
        }
    }
}
